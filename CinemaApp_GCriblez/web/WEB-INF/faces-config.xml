<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>ch.hegarc.ig.odi.cinemaapp.bundle.ressources</base-name>
            <var>resrc</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>/listMoviePerson.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/viewMovie.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/errorPage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewPersonBean.showPerson(pers)}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/viewPerson.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/errorPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
    <navigation-rule>
        <from-view-id>/errorPage.xhtml</from-view-id>
        <navigation-case>
            <from-action>home</from-action>
            <to-view-id>/customerList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/viewMovie.xhtml</from-view-id>
        <navigation-case>
            <from-action>home</from-action>
            <to-view-id>/customerList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewPersonBean.showPerson(pers)}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/viewPerson.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/errorPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/viewPerson.xhtml</from-view-id>
        <navigation-case>
            <from-action>home</from-action>
            <to-view-id>/customerList.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>show</from-outcome>
            <to-view-id>/viewMovie.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{viewMovieBean.showMovie(mov)}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/errorPage.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    
</faces-config>
